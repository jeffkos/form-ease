# Variables d'environnement pour FormEase Backend
# Copiez ce fichier vers .env et modifiez les valeurs

# Base de données PostgreSQL
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/formease_db?schema=public"

# Sécurité JWT
JWT_SECRET="your-super-secret-jwt-key-here"

# Configuration SMTP (remplacez par vos vraies valeurs)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
SMTP_FROM=noreply@example.com

# Environment
NODE_ENV=development
PORT=4000

# Prisma
PRISMA_LOG_LEVEL=info
PRISMA_ENABLE_TRACING=true

# Configuration Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_PREMIUM_PRICE_ID=price_your_premium_price_id_here

# URLs Frontend
FRONTEND_URL=http://localhost:3000

# Pricing Configuration
PREMIUM_PRICE_EUR=12.00
PREMIUM_PRICE_CENTS=1200
