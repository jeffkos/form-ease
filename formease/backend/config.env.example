# Configuration FormEase Backend
# Copier ce fichier vers .env et modifier les valeurs

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/formease"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRATION="24h"

# Server
PORT=3000
NODE_ENV="development"

# CORS
CORS_ORIGIN="http://localhost:3001"

# Email Configuration (SMTP par d√©faut)
EMAIL_PROVIDER="nodemailer"
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_REJECT_UNAUTHORIZED="true"

# Email Optionnel - SendGrid
SENDGRID_API_KEY=""
SENDGRID_FROM="noreply@formease.com"

# SMS Configuration (optionnel)
SMS_PROVIDER="simulation"

# SMS Optionnel - Twilio  
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_PHONE_NUMBER=""

# SMS Optionnel - Free Mobile (gratuit)
FREE_MOBILE_USER=""
FREE_MOBILE_PASS=""

# Uploads
UPLOAD_PATH="./uploads"
MAX_FILE_SIZE="10MB"

# Logs
LOG_LEVEL="info"
LOG_FILE="./logs/formease.log"

# Rate Limiting
RATE_LIMIT_WINDOW="15m"
RATE_LIMIT_MAX="100"

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET="your-session-secret-change-this"

# Analytics
ANALYTICS_ENABLED="true"
ANALYTICS_RETENTION_DAYS=365 