{
  "name": "backend",
  "version": "1.0.0",
  "main": "src/app.js",
  "scripts": {
    "dev": "nodemon src/app.js",
    "start": "node src/app.js",
    "start:prod": "NODE_ENV=production node src/app.js",
    "start:check": "node scripts/start-formease.js --check-only",
    "start:dev": "node scripts/start-formease.js --dev",
    "start:full": "node scripts/start-formease.js",
    "test": "npx jest",
    "test:watch": "npx jest --watch",
    "test:coverage": "npx jest --coverage",
    "test:integration": "npx jest --testPathPattern=integration",
    "test:setup": "NODE_ENV=test npm run db:setup",
    "lint": "npx eslint src/ --ext .js",
    "lint:fix": "npx eslint src/ --ext .js --fix",
    "generate-jwt-secret": "node scripts/generate-jwt-secret.js",
    "create-admin": "node scripts/create-admin.js",
    "db:setup": "node scripts/setup-database.js --seed",
    "db:reset": "node scripts/setup-database.js --reset --seed",
    "db:init": "node scripts/setup-database.js",
    "db:migrate": "npx prisma migrate dev",
    "db:migrate:prod": "npx prisma migrate deploy",
    "db:generate": "npx prisma generate",
    "db:studio": "npx prisma studio",
    "db:seed": "node scripts/setup-database.js --seed",
    "env:setup": "node scripts/setup-environment.js",
    "env:reset": "node scripts/setup-environment.js --force",
    "install:full": "npm install && npm run env:setup && npm run db:setup",
    "install:windows": "powershell -ExecutionPolicy Bypass -File scripts/Setup-FormEase.ps1",
    "dev:full": "npm run env:setup && npm run db:setup && npm start",
    "logs:clear": "rm -rf logs/* || rmdir /s logs 2>nul || true",
    "logs:view": "tail -f logs/combined.log",
    "logs:errors": "tail -f logs/error.log",
    "maintenance": "node src/scripts/maintenanceQuotas.js",
    "maintenance:dry": "DRY_RUN=true node src/scripts/maintenanceQuotas.js",
    "health": "curl -f http://localhost:4000/health || exit 1",
    "config:check": "node scripts/start-formease.js --check-only",
    "services:check": "node -e \"require('./scripts/start-formease.js').checkExternalServices()\"",
    "security:audit": "npm audit && npm audit fix",
    "backup:db": "pg_dump $DATABASE_URL > backups/backup-$(date +%Y%m%d-%H%M%S).sql",
    "restore:db": "psql $DATABASE_URL < backups/latest-backup.sql",
    "docker:build": "docker build -t formease-backend .",
    "docker:run": "docker run -p 4000:4000 formease-backend",
    "deploy:check": "NODE_ENV=production npm run config:check",
    "deploy:migrate": "NODE_ENV=production npm run db:migrate:prod",
    "monitor:start": "node src/scripts/monitoringAlerts.js",
    "cron:setup": "node -e \"console.log('0 2 * * * cd /path/to/formease/backend && npm run maintenance')\"",
    "version:info": "node -e \"console.log('FormEase Backend v' + require('./package.json').version)\"",
    "help": "node -e \"console.log('Commandes disponibles:'); Object.keys(require('./package.json').scripts).forEach(s => console.log('  npm run ' + s));\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@prisma/client": "^6.11.1",
    "@sendgrid/mail": "^8.1.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dompurify": "^3.2.6",
    "dotenv": "^16.4.1",
    "exceljs": "^4.4.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "ioredis": "^5.6.1",
    "isomorphic-dompurify": "^2.26.0",
    "joi": "^17.13.3",
    "json2csv": "^5.0.7",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.10.1",
    "openai": "^5.8.3",
    "pdfkit": "^0.14.0",
    "pg": "^8.11.3",
    "prom-client": "^15.1.3",
    "qrcode": "^1.5.4",
    "redis": "^5.6.0",
    "stripe": "^18.3.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "validator": "^13.15.15",
    "winston": "^3.11.0",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "prisma": "^6.11.1",
    "supertest": "^7.1.1"
  }
}
